<div class="container">
<h1>会員情報編集</h1>

<%= form_with model: @customer, url: admin_customer_path do |f| %>

<div class="row">
    <div class="col-lg-3">
    <h4>会員ID</h4>
    </div>
    <div class="col-lg-9">
     <%=@customer.id%>
     </div>
</div>

<div class="row">
    <div class="col-lg-3">
    <h4>氏名</h4>
    </div>
    <div class="col-lg-9">
     <%= f.text_field :last_name%><%= f.text_field :first_name%>
    </div>
</div>

<div class="row">
    <div class="col-lg-3">
    <h4>フリガナ</h4>
    </div>
    <div class="col-lg-9">
     <%= f.text_field :last_name_kana%><%= f.text_field :first_name_kana%>
      </div>
</div>

<div class="row">
    <div class="col-lg-3">
    <h4>郵便番号</h4>
    </div>
    <div class="col-lg-9">
     <%= f.text_field :introduction%>
     </div>
</div>

<div class="row">
    <div class="col-lg-3">
    <h4>住所</h4>
    </div>
    <div class="col-lg-9">
     <%= f.text_field :postal_code%>
     </div>
</div>

<div class="row">
    <div class="col-lg-3">
    <h4>電話番号</h4>
    </div>
    <div class="col-lg-9">
     <%= f.text_field :telephone_number%>
     </div>
</div>

<div class="row">
    <div class="col-lg-3">
    <h4>メールアドレス</h4>
    </div>
    <div class="col-lg-9">
     <%= f.text_field :email%>
     </div>
</div>

<div class="row">
    <div class="col-lg-3">
    <h4></h4>
    </div>
    <div class="col-lg-9">
       <%= f.submit "変更を保存",class:"btn btn-success"%>
     </div>
</div>

<% end %>

</div>