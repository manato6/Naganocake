
<div class="container">
<h1>注文履歴一覧</h1>
<div class="row">
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>　</th>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>


      <tbody>
         <% @orders.each do |order| %>
        <tr>
          <td> </td>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%=current_customer.postal_code%><br><%=current_customer.address%><br><%=current_customer.last_name%><%=current_customer.first_name%></td>
            <td><% order.order_details.each do |order_detail| %>
             <%= order_detail.item.name %>
             <% end %>
            </td>
            <td><%= order.total_amount %>円</td>
          <td><%= link_to "表示する",orders_path,class:"btn btn-primary"%></td>
        </tr>
        <% end %>
      </tbody>
  </table>
  </div>
  </div>