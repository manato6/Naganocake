<h1>商品一覧</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
<%= link_to "+",new_admin_item_path %>
 </div>
</div>


<table class="table table-hover table-inverse">
<thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
    </tr>
  </thead>
  <tbody>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name,admin_item_path(item) %></td>
      <td><%= item.price %></td>
    </tr>
  <% end %>
  </tbody>
  </table>