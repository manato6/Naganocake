<div class="container">
<h1>会員詳細</h1>


<div class="row">
    <div class="col-lg-4">
      <p>会員ID</p>
    </div>
    <div class="col-lg-8">
      <%=@customer.id%>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
      <p>氏名</p>
    </div>
    <div class="col-lg-8">
      <%=@customer.last_name%><%=@customer.first_name%>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
      <p>フリガナ</p>
    </div>
    <div class="col-lg-8">
      <%=@customer.last_name_kana%><%=@customer.first_name_kana%>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
      <p>郵便番号</p>
    </div>
    <div class="col-lg-8">
      <%=@customer.postal_code%>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
      <p>住所</p>
    </div>
    <div class="col-lg-8">
      <%=@customer.address%>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
      <p>電話番号</p>
    </div>
    <div class="col-lg-8">
      <%=@customer.telephone_number%>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
      <p>メールアドレス</p>
    </div>
    <div class="col-lg-8">
      <%=@customer.email%>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
      <p></p>
    </div>
    <div class="col-lg-8">
      <%= link_to "編集する",edit_admin_customer_path,class:"btn btn-success" %>
      <%= link_to "注文履歴一覧を見る",orders_path,class:"btn btn-primary" %>
    </div>
</div>