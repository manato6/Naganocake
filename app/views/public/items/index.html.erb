<div class="container">
  <div class="row">
   <h1>商品一覧</h1>
  </div>
  
    <div class="row">
     <% @items.each do |item| %>
     <div class="col-lg-2 col-md-3">
       <%= link_to item_path(item) do %>
       <%= image_tag item.get_image(400,400),class:"w-100" %>
       <% end %>
      <p><%= item.name %></p>
      <p><%= item.price %></p>
      </div>
  <% end %>
    </div>
</div>