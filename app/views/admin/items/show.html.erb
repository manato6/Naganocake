<div class="container">
  <div class="row">
    <h1>商品詳細</h1>
  </div>
  <div class="row">
    <div class="col-lg-4">
    <%= image_tag @item.image, size: "200x200" %>
    </div>
  <div class="col-lg-8">
  <div>
    <p>商品名：<%= @item.name %></p>
    <p>商品説明：<%= @item.introduction %></p>
    <p>税抜価格：<%= @item.price %>円</p>
  </div>

  <%= link_to "編集する",edit_admin_item_path(@item),class:"btn btn-success" %>
  </div>
</div>
</div>
