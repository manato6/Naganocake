<div class="container">
  <div class="row">
    <h1>商品詳細</h1>
  </div>
  <div class="row">
    <div class="col-lg-4">
    <%= image_tag @item.image, size: "200x200" %>
    </div>
  <div class="col-lg-8">
  <div>
    <p>商品名：<%= @item.name %></p>
    <p>商品説明：<%= @item.introduction %></p>
    <p>税抜価格：<%= @item.price %>円</p>
  </div>
  <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, *[1..3] %>
  <div class="actions">
    <%= f.submit "カートに入れる",class:"btn btn-success"%>
  </div>
  <% end %>
  </div>
</div>
</div>
